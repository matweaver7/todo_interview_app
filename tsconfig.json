{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "sourceMap": false,
    "removeComments": true,
    "module": "commonjs",
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@enums/*": [
        "constants/enums/*"
      ],
      "@pages/*": [
        "pages/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}